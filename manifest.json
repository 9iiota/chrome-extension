{
	"manifest_version": 3,
	"name": "Enhancer",
	"description": "Adds convenient features",
	"version": "2.0",
	"options_page": "popup.html",
	"permissions": [
		"activeTab",
		"alarms",
		"cookies",
		"scripting",
		"storage",
		"tabs"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"24": "images/loop-icon-24.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"css": ["styles.css"],
			"js": ["youtube/content.js"],
			"matches": ["*://*.youtube.com/watch*"]
		},
		{
            "css": ["styles.css"],
            "js": ["tiktok/content.js"],
            "matches": ["*://*.tiktok.com/*"]
        },
		{
            "css": ["styles.css"],
            "js": ["twitch/content.js"],
            "matches": ["*://*.twitch.tv/*"]
        }
	],
	"host_permissions": [
		"*://*.namazvakitleri.diyanet.gov.tr/*",
		"*://*.tiktok.com/*"
	],
	"web_accessible_resources": [
		{
			"resources": [ "images/loop-icon-24.png", "images/loop-icon-24-pressed.png" ],
			"matches": ["https://www.youtube.com/*"]
		}
	]
}