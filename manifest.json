{
	"manifest_version": 3,
	"name": "Youtube Video Looper",
	"version": "1.0",
	"description": "Adds a custom loop button to YouTube video pages",
	"permissions": [
		"activeTab",
		"scripting"
	],
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/watch*"],
			"css": ["styles.css"],
			"js": ["content.js"]
		}
	]
}
